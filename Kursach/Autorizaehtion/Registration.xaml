<Page x:Class="Kursach.Autorizaehtion.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursach.Autorizaehtion"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFB3E5FC" Offset="0.0" />
                <GradientStop Color="#FFE1F5FE" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="568" Height="396">
            <TextBlock Text="Регистрация нового пользователя" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"
                       HorizontalAlignment="Center" Foreground="#FF37474F" />

            <TextBlock Text="Логин:" FontSize="14" Margin="0,10"/>
            <TextBox Name="UsernameTextBox" Width="300" Height="30" Margin="0,0,0,10"
                     BorderBrush="#FF2196F3" BorderThickness="1.5" Padding="5" />

            <TextBlock Text="Пароль:" FontSize="14"/>
            <PasswordBox Name="PasswordBox" Width="300" Height="30" Margin="0,0,0,10"
                         BorderBrush="#FF2196F3" BorderThickness="1.5" Padding="5" />

            <TextBlock Text="Подтверждение пароля:" FontSize="14"/>
            <PasswordBox Name="ConfirmPasswordBox" Width="300" Height="30" Margin="0,0,0,20"
                         BorderBrush="#FF2196F3" BorderThickness="1.5" Padding="5" />

            <!-- Галочка для согласия с пользовательским соглашением -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <CheckBox Name="AgreeCheckbox" Margin="0,0,10,0" />
                <TextBlock Text="Я согласен с " FontSize="12"/>
                <TextBlock Text="пользовательским соглашением" 
                           FontSize="12" 
                           Foreground="Blue" 
                           TextDecorations="Underline"
                           Cursor="Hand"
                           MouseDown="TextBlock_MouseDown"
                           />
            </StackPanel>

            <Button Name="RegisterButton" Content="Зарегистрироваться" Width="300" Height="35"
                    Background="#FF4CAF50" Foreground="White" FontWeight="Bold" Click="RegisterButton_Click"/>

            <TextBlock Name="RegistrationErrorMessageTextBlock" Text="" Foreground="Red" HorizontalAlignment="Center"
                       Margin="0,10,0,0" />

            <TextBlock Text="Уже есть аккаунт? Нажмите на 'Вход'" FontSize="12" HorizontalAlignment="Center" 
                       Margin="0,10,0,0" Foreground="#FF37474F"/>
            <Button Name="LoginButton" Content="Вход" Width="300" Height="35" 
                    Background="#FF2196F3" Foreground="White" FontWeight="Bold" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
