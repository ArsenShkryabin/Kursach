<Page x:Class="Kursach.User.GoalsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Цели пользователя">

    <ScrollViewer>
        <Grid>
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFB3E5FC" Offset="0.0"/>
                    <GradientStop Color="#FFE1F5FE" Offset="1.0"/>
                </LinearGradientBrush>
            </Grid.Background>

            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="20">

                <!-- Заголовок -->
                <TextBlock Text="Управление целями" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,25" 
                           Foreground="#FF37474F"/>

                <!-- Форма добавления целей -->
                <Border Background="#FFE1F5FE" 
                        CornerRadius="8" 
                        Padding="15" 
                        Margin="0,0,0,20"
                        BorderBrush="#FF2196F3" 
                        BorderThickness="2">
                    <StackPanel>
                        <TextBlock Text="Новая цель:" 
                                   FontSize="16" 
                                   Foreground="#FF37474F"
                                   Margin="0,0,0,5"/>
                        <TextBox Name="GoalTextBox" 
                                 Height="35" 
                                 FontSize="14"
                                 BorderBrush="#FF2196F3" 
                                 BorderThickness="1.5"
                                 Padding="5"/>

                        <TextBlock Text="Описание:" 
                                   FontSize="16" 
                                   Foreground="#FF37474F"
                                   Margin="0,10,0,5"/>
                        <TextBox Name="DescriptionTextBox" 
                                 Height="60" 
                                 FontSize="14"
                                 BorderBrush="#FF2196F3" 
                                 BorderThickness="1.5"
                                 Padding="5" 
                                 TextWrapping="Wrap"/>

                        <Button Name="AddGoalButton" 
                                Content="Добавить цель" 
                                Height="40" 
                                FontSize="16"
                                Background="#FF4CAF50" 
                                Foreground="White" 
                                FontWeight="Bold"
                                Margin="0,15,0,0"
                                Click="AddGoalButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- Таблица целей -->
                <DataGrid Name="GoalsDataGrid" 
                          AutoGenerateColumns="False" 
                          Margin="0,10,0,10"
                          Background="Transparent" 
                          Foreground="#FF37474F" 
                          FontSize="14"
                          RowBackground="#FFE1F5FE" 
                          AlternatingRowBackground="#FFB3E5FC"
                          BorderBrush="#FF2196F3" 
                          BorderThickness="2" 
                          GridLinesVisibility="None"
                          CanUserAddRows="False">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#FF37474F"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Padding" Value="10"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Цель" Binding="{Binding Title}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#FF37474F"/>
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="Padding" Value="5"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="2*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#FF37474F"/>
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="Padding" Value="5"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#FF37474F"/>
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="Padding" Value="5"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Кнопки управления -->
                <StackPanel Orientation="Vertical" Margin="0,20,0,0">
                    <Button Name="MarkAsCompletedButton" 
                            Content="Отметить как выполненное" 
                            Height="40" 
                            FontSize="16"
                            Background="#FF2196F3" 
                            Foreground="White" 
                            FontWeight="Bold"
                            Click="MarkAsCompletedButton_Click"/>

                    <Button Name="DeleteGoalButton" 
                            Content="Удалить цель" 
                            Height="40" 
                            FontSize="16"
                            Background="#FFD32F2F" 
                            Foreground="White" 
                            FontWeight="Bold"
                            Margin="0,10,0,0"
                            Click="DeleteGoalButton_Click"/>
                </StackPanel>

                <!-- Статус выполнения -->
                <TextBlock Name="ProgressTextBlock" 
                           FontSize="14" 
                           Foreground="#FF37474F" 
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>