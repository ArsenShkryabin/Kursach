<Page x:Class="Kursach.User.GoalsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Цели пользователя">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFB3E5FC" Offset="0.0" />
                <GradientStop Color="#FFE1F5FE" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="500" Margin="20">
            <TextBlock Text="Управление целями" FontSize="20" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="#FF37474F" />

            <!-- Форма добавления цели -->
            <TextBlock Text="Новая цель:" FontSize="14" Foreground="#FF37474F" />
            <TextBox Name="GoalTextBox" Width="500" Height="30" Margin="0,0,0,10" 
                     BorderBrush="#FF2196F3" BorderThickness="1.5" Padding="5" />

            <TextBlock Text="Описание:" FontSize="14" Foreground="#FF37474F" />
            <TextBox Name="DescriptionTextBox" Width="500" Height="60" Margin="0,0,0,20" 
                     BorderBrush="#FF2196F3" BorderThickness="1.5" Padding="5" TextWrapping="Wrap" />

            <Button Name="AddGoalButton" Content="Добавить цель" Width="500" Height="35" 
                    Background="#FF4CAF50" Foreground="White" FontWeight="Bold" Click="AddGoalButton_Click"/>

            <!-- Список целей -->
            <TextBlock Text="Мои цели:" FontSize="16" FontWeight="Bold" 
                       Margin="0,20,0,10" Foreground="#FF37474F" />
            <ListView Name="GoalsListView" Width="500" Height="300"
                      Background="#FFE1F5FE" Foreground="#FF37474F" FontSize="14"
                      BorderBrush="#FF2196F3" BorderThickness="2">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Цель" DisplayMemberBinding="{Binding Title}" Width="150">
                            <GridViewColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="Цель" Foreground="White" FontWeight="Bold" Padding="5"/>
                                </DataTemplate>
                            </GridViewColumn.HeaderTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Описание" DisplayMemberBinding="{Binding Description}" Width="200">
                            <GridViewColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="Описание" Foreground="White" FontWeight="Bold" Padding="5"/>
                                </DataTemplate>
                            </GridViewColumn.HeaderTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Статус" DisplayMemberBinding="{Binding Status}" Width="100">
                            <GridViewColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="Статус" Foreground="White" FontWeight="Bold" Padding="5"/>
                                </DataTemplate>
                            </GridViewColumn.HeaderTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Background" Value="#FFE1F5FE"/>
                        <Setter Property="Foreground" Value="#FF37474F"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Padding" Value="5"/>
                        <Setter Property="BorderBrush" Value="#FFB3E5FC"/>
                        <Setter Property="BorderThickness" Value="1"/>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>

            <!-- Кнопки управления -->
            <Button Name="MarkAsCompletedButton" Content="Отметить как выполненное" Width="500" Height="35" 
                    Background="#FF2196F3" Foreground="White" FontWeight="Bold" Click="MarkAsCompletedButton_Click"
                    Margin="0,10,0,5"/>

            <Button Name="DeleteGoalButton" Content="Удалить цель" Width="500" Height="35" 
                    Background="#FFD32F2F" Foreground="White" FontWeight="Bold" Click="DeleteGoalButton_Click"
                    Margin="0,5,0,5"/>

            <!-- Статус выполнения целей -->
            <TextBlock Name="ProgressTextBlock" FontSize="14" Foreground="#FF37474F" 
                       Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Page>
