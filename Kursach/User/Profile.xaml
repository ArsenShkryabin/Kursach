<Page x:Class="Kursach.User.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursach.User"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="800"
      Title="Profile">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFB3E5FC" Offset="0.0" />
                <GradientStop Color="#FFE1F5FE" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="400" Margin="0,20,0,0">
            <TextBlock Text="Профиль пользователя" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"
                       HorizontalAlignment="Center" Foreground="#FF37474F" />

            <TextBlock Text="Логин:" FontSize="14"/>
            <TextBox Name="UsernameTextBox" Width="400" Height="30" Margin="0,0,0,10" IsReadOnly="True"/>

            <TextBlock Text="Электронная почта:" FontSize="14"/>
            <TextBox Name="EmailTextBox" Width="400" Height="30" Margin="0,0,0,10" IsReadOnly="True"/>

            <Button Name="EditButton" Content="Редактировать" Width="400" Height="35"
                    Background="#FF4CAF50" Foreground="White" FontWeight="Bold" Click="EditButton_Click"/>

            <Button Name="LogoutButton" Content="Выход" Width="400" Height="35" 
                    Background="#FFC107" Foreground="White" FontWeight="Bold" Margin="0,10,0,0"
                    Click="LogoutButton_Click"/>

            <TextBlock Text="Основные показатели:" FontSize="16" FontWeight="Bold" Margin="0,20,0,5"
                       HorizontalAlignment="Left" Foreground="#FF37474F"/>

            <TextBlock Text="Рост (в см):" FontSize="14"/>
            <TextBox Name="HeightTextBox" Width="400" Height="30" Margin="0,0,0,10" />

            <TextBlock Text="Вес (в кг):" FontSize="14"/>
            <TextBox Name="WeightTextBox" Width="400" Height="30" Margin="0,0,0,10" />

            <Button Name="CalculateBMIButton" Content="Подсчитать ИМТ" Width="400" Height="35" 
                    Background="#FF2196F3" Foreground="White" FontWeight="Bold" Click="CalculateBMIButton_Click" Margin="0,5,0,10"/>

            <TextBlock Name="BMIResultTextBlock" FontSize="16" Margin="0,5,0,5" 
                       Foreground="#FF37474F"/>

        </StackPanel>




        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="540,234,0,0" Grid.ColumnSpan="2">
            <Button Name="CalorieTrackerButton" Content="Перейти к подсчету калорий" Width="180" Height="35"

                    Background="#FF2196F3" Foreground="White" FontWeight="Bold" Click="CalorieTrackerButton_Click"  Margin="0,5,0,5"/>

            <Button Name="UserStateButton" Content="Перейти к состоянию пользователя" Width="180" Height="35"
                    Background="#FF2196F3" Foreground="White" FontWeight="Bold" Click="UserStateButton_Click_1"  Margin="0,5,0,0"/>

            <Button Name="MyHabitsButton" Content="Мои привычки" Width="180" Height="35"
                    Background="#FF2196F3" Foreground="White" FontWeight="Bold" Click="MyHabitsButton_Click" 
                    Margin="0,5,0,5"/>
            <Button Name="HistoryButton" Content="Вся история" Width="180" Height="35" 
                    Background="#FF2196F3" Foreground="White" FontWeight="Bold" Margin="0,5,0,0"
                    Click="HistoryButton_Click"/>
        </StackPanel>

        <StackPanel/>
        <DataGrid Name="HealthDataGrid1" AutoGenerateColumns="False" Height="200"
          CanUserAddRows="False" IsReadOnly="True" Margin="100,481,65,819">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата" Binding="{Binding Date}"/>
                <DataGridTextColumn Header="Рост" Binding="{Binding Height}"/>
                <DataGridTextColumn Header="Вес" Binding="{Binding Weight}"/>
                <DataGridTextColumn Header="ИМТ" Binding="{Binding BMI}"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Margin="-467,-576,467,576"/>

    </Grid>
</Page>
