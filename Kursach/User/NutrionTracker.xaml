<Page x:Class="Kursach.User.NutrionTracker"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Отслеживание питания">

    <Grid Background="#FFE1F5FE">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Отслеживание питания" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="10" />

        <!-- Форма ввода данных -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Width="400" Margin="10">
            <TextBlock Text="Продукт:" FontSize="14" />
            <TextBox Name="ProductTextBox" Width="400" Height="30" Margin="0,0,0,10" />

            <TextBlock Text="Калории:" FontSize="14" />
            <TextBox Name="CaloriesTextBox" Width="400" Height="30" Margin="0,0,0,10" />

            <Button Name="SaveButton" Content="Сохранить" Width="400" Height="35"
                    Background="#FF4CAF50" Foreground="White" FontWeight="Bold" Click="SaveButton_Click" />
        </StackPanel>

        <!-- История питания -->
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <TextBlock Text="История питания:" FontSize="16" FontWeight="Bold" Margin="0,10,0,5" />

            <ListView Name="NutritionHistoryListView" Width="400" Height="200">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Продукт" DisplayMemberBinding="{Binding product}" />
                        <GridViewColumn Header="Калории" DisplayMemberBinding="{Binding calories}" />
                        <GridViewColumn Header="Дата" DisplayMemberBinding="{Binding date}" />
                    </GridView>
                </ListView.View>
            </ListView>

            <Button Name="DeleteButton" Content="Удалить выбранное" Width="400" Height="35"
                    Background="#FFE53935" Foreground="White" FontWeight="Bold" Click="DeleteButton_Click" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Page>
