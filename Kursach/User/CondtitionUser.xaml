<Page x:Class="Kursach.User.CondtitionUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursach.User"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Состояние пользователя">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFB3E5FC" Offset="0.0" />
                <GradientStop Color="#FFE1F5FE" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="400" Margin="0,20,0,0">
            <TextBlock Text="Состояние пользователя" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"
                       HorizontalAlignment="Center" Foreground="#FF37474F" />

            <TextBlock Text="Физическое состояние:" FontSize="14"/>
            <ComboBox Name="PhysicalStateComboBox" Width="400" Height="30" Margin="0,0,0,10">
                <ComboBoxItem Content="Отлично" />
                <ComboBoxItem Content="Хорошо" />
                <ComboBoxItem Content="Удовлетворительно" />
                <ComboBoxItem Content="Плохо" />
            </ComboBox>

            <TextBlock Text="Моральное состояние:" FontSize="14"/>
            <ComboBox Name="MentalStateComboBox" Width="400" Height="30" Margin="0,0,0,10">
                <ComboBoxItem Content="Счастлив" />
                <ComboBoxItem Content="Спокойно" />
                <ComboBoxItem Content="Нервничаю" />
                <ComboBoxItem Content="Депрессия" />
            </ComboBox>

            <Button Name="EvaluateStateButton" Content="Оценить состояние" Width="400" Height="35"
                    Background="#FF4CAF50" Foreground="White" FontWeight="Bold" Click="EvaluateStateButton_Click"/>

            <Button Name="SaveStateButton" Content="Сохранить состояние" Width="400" Height="35"
                    Background="#FF2196F3" Foreground="White" FontWeight="Bold" Click="SaveStateButton_Click"/>

            <TextBlock Name="MessageTextBlock" FontSize="16" Margin="0,10,0,5" 
                       Foreground="#FF37474F"/>
        </StackPanel>

        <!-- Таблица для отображения истории состояний -->
        <DataGrid Name="UserStateDataGrid" HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                  Width="600" Height="200" Margin="0,0,0,20" AutoGenerateColumns="False"
                  Background="Transparent" Foreground="#FF37474F" FontSize="14"
                  RowBackground="#FFE1F5FE" AlternatingRowBackground="#FFB3E5FC"
                  BorderBrush="#FF2196F3" BorderThickness="2" GridLinesVisibility="None">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#FF2196F3"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Padding" Value="10"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата" Binding="{Binding Date, StringFormat=\{0:dd.MM.yyyy\}}" Width="*"/>
                <DataGridTextColumn Header="Физическое состояние" Binding="{Binding PhysicalState}" Width="*"/>
                <DataGridTextColumn Header="Моральное состояние" Binding="{Binding MentalState}" Width="*"/>
                <DataGridTextColumn Header="Рекомендации" Binding="{Binding Recommendations}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопка для обновления таблицы -->
        <Button Name="RefreshStateHistoryButton" Content="Обновить историю" Width="180" Height="35"
                Background="#FF2196F3" Foreground="White" FontWeight="Bold" 
                Click="RefreshStateHistoryButton_Click"
                HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="540,0,0,20"/>
    </Grid>
</Page>
