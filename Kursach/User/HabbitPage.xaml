<Page x:Class="Kursach.User.HabbitPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursach.User"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="HabbitPage">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFB3E5FC" Offset="0.0" />
                <GradientStop Color="#FFE1F5FE" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="500">
            <TextBlock Text="Управление привычками" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" 
                       HorizontalAlignment="Center" Foreground="#FF37474F" />

            <TextBlock Text="Добавить привычку:" FontSize="14" Foreground="#FF37474F" />
            <TextBox Name="HabitTextBox" Width="500" Height="30" Margin="0,0,0,10" 
                     BorderBrush="#FF2196F3" BorderThickness="1.5" Padding="5" />

            <TextBlock Text="Описание:" FontSize="14" Foreground="#FF37474F" />
            <TextBox Name="DescriptionTextBox" Width="500" Height="60" Margin="0,0,0,20" 
                     BorderBrush="#FF2196F3" BorderThickness="1.5" Padding="5" TextWrapping="Wrap" />

            <Button Name="AddHabitButton" Content="Добавить привычку" Width="500" Height="35" Margin="0,10,0,0" 
                    Background="#FF2196F3" Foreground="White" FontWeight="Bold" Click="AddHabitButton_Click"/>

            <DataGrid Name="HabitsDataGrid" AutoGenerateColumns="False" Height="200" Margin="0,20,0,10" 
                      SelectionMode="Single" SelectionUnit="FullRow">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Привычка" Binding="{Binding Habit}" Width="*"/>
                    <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <Button Name="RemoveHabitButton" Content="Удалить привычку" Width="500" Height="35" 
                    Background="#FFf44336" Foreground="White" FontWeight="Bold" Click="RemoveHabitButton_Click"/>

            <TextBlock Name="ActionMessageTextBlock" Text="" Foreground="Red" HorizontalAlignment="Center" 
                       Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Page>
