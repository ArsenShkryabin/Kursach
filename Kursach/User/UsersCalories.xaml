<Page x:Class="Kursach.User.UsersCalories"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursach.User"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UsersCalories">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFB3E5FC" Offset="0.0" />
                <GradientStop Color="#FFE1F5FE" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="350" Margin="20">
            <TextBlock Text="Подсчет калорий" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"
                       HorizontalAlignment="Center" Foreground="#FF37474F" />

            <TextBlock Text="Калории, потребленные:" FontSize="14"/>
            <TextBox Name="CaloriesConsumedTextBox" Width="300" Height="30" Margin="0,0,0,10" />

            <TextBlock Text="Калории, сожженные:" FontSize="14"/>
            <TextBox Name="CaloriesBurnedTextBox" Width="300" Height="30" Margin="0,0,0,10" />

            <TextBlock Text="Ваша дневная норма калорий:" FontSize="14"/>
            <TextBox Name="DailyCalorieGoalTextBox" Width="300" Height="30" Margin="0,0,0,10" />

            <Button Name="SaveButton" Content="Сохранить" Width="300" Height="35" 
                    Background="#FF4CAF50" Foreground="White" FontWeight="Bold" Click="SaveButton_Click"/>

            <TextBlock Name="MessageTextBlock" FontSize="14" HorizontalAlignment="Center" 
                       Foreground="Red" Margin="0,10,0,0"/>

            <TextBlock Text="История внесенных данных:" FontSize="16" FontWeight="Bold" 
                       Margin="0,20,0,5" HorizontalAlignment="Center" Foreground="#FF37474F"/>

            <ScrollViewer Width="300" Height="200">
                <DataGrid Name="CaloriesHistoryDataGrid" AutoGenerateColumns="True" 
                           CanUserAddRows="False" IsReadOnly="True"/>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Page>
