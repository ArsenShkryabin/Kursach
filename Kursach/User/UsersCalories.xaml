<Page x:Class="Kursach.User.UsersCalories"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursach.User"
      mc:Ignorable="d" d:DesignWidth="800"
      Title="Отслеживание калорий" Height="992">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFB3E5FC" Offset="0.0" />
                <GradientStop Color="#FFE1F5FE" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="-67,-46,67,46">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="400" Margin="20">
                <!-- Заголовок -->
                <TextBlock Text="Отслеживание калорий" FontSize="24" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="#FF37474F" />

                <!-- Выбор даты -->
               
                    <StackPanel>
                        <TextBlock Text="Выберите дату:" FontSize="14" />
                        <DatePicker Name="DatePicker" Width="300" Margin="0,5,0,0" 
                                    SelectedDateChanged="DatePicker_SelectedDateChanged" />
                    </StackPanel>
               

                <!-- Общее количество калорий за день -->
               
                    <StackPanel>
                        <TextBlock Text="Общее количество калорий за день:" FontSize="14" />
                        <TextBox Name="TotalCaloriesConsumedTextBox" Width="300" Height="30" Margin="0,5,0,0" 
                                 IsReadOnly="True" Background="#FFF5F5F5" BorderBrush="#FFBDBDBD" />
                    </StackPanel>
         
                <!-- Ввод шагов -->
             
                    <StackPanel>
                        <TextBlock Text="Количество шагов за сегодня:" FontSize="14" />
                        <TextBox Name="StepsTextBox" Width="300" Height="30" Margin="0,5,0,0" />
                    </StackPanel>
               
                <!-- Сожженные калории -->
             
                    <StackPanel>
                        <TextBlock Text="Сожженные калории:" FontSize="14" />
                        <TextBox Name="CaloriesBurnedTextBox" Width="300" Height="30" Margin="0,5,0,0" 
                                 IsReadOnly="True" Background="#FFF5F5F5" BorderBrush="#FFBDBDBD" />
                    </StackPanel>
      

                <!-- Дневная норма калорий -->
                
                    <StackPanel>
                        <TextBlock Text="Ваша дневная норма калорий:" FontSize="14" />
                        <TextBox Name="DailyCalorieGoalTextBox" Width="300" Height="30" Margin="0,5,0,0" 
                                 IsReadOnly="True" Background="#FFF5F5F5" BorderBrush="#FFBDBDBD" />
                    </StackPanel>
          

                <!-- Избыток/недостаток калорий -->
           
                    <StackPanel>
                        <TextBlock Text="Избыток/недостаток калорий:" FontSize="14" />
                        <TextBox Name="CalorieDifferenceTextBox" Width="300" Height="30" Margin="0,5,0,0" 
                                 IsReadOnly="True" Background="#FFF5F5F5" BorderBrush="#FFBDBDBD" />
                    </StackPanel>
               

                <!-- Рекомендации -->
                
                    <StackPanel>
                        <TextBlock Text="Рекомендации:" FontSize="14" />
                        <TextBox Name="RecommendationsTextBox" Width="300" Height="60" Margin="0,5,0,0" 
                                 TextWrapping="Wrap" IsReadOnly="True" Background="#FFF5F5F5" BorderBrush="#FFBDBDBD" />
                    </StackPanel>
               

                <!-- Кнопка сохранения -->
                <Button Name="SaveButton" Content="Сохранить шаги" Width="300" Height="35" 
                        Background="#FF4CAF50" Foreground="White" FontWeight="Bold" Click="SaveButton_Click"
                        Margin="0,0,0,20" />

                <!-- История калорий -->

                <StackPanel>
                    <TextBlock Text="История калорий:" FontSize="16" FontWeight="Bold" 
                                   HorizontalAlignment="Center" Margin="0,0,0,10" Foreground="#FF37474F" />
                    <DataGrid Name="CaloriesHistoryDataGrid" AutoGenerateColumns="False" 
                                  CanUserAddRows="False" IsReadOnly="True" Width="300" Height="200" 
                                  Background="#FFE1F5FE" Foreground="#FF37474F" FontSize="14"
                                  RowBackground="#FFE1F5FE" AlternatingRowBackground="#FFB3E5FC"
                                  BorderBrush="#FF2196F3" BorderThickness="2" GridLinesVisibility="None">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#FF2196F3"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Padding" Value="10"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Дата" Binding="{Binding Date, StringFormat=\{0:dd.MM.yyyy\}}" Width="*"/>
                            <DataGridTextColumn Header="Калории" Binding="{Binding Calories}" Width="*"/>
                            <DataGridTextColumn Header="Шаги" Binding="{Binding Steps}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
